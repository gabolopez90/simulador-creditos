<!Doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Simulador Credinomina</title>
		<link rel="stylesheet" href="css\bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
		<link rel="stylesheet" type="text/css" href="css/styles.css">
		<link rel="shortcut icon" href="img/icon.JPG">
	</head>
	<body>
		<div class="jumbotron">
			<img src="img/logo_bdv.jpg">
			<h1 class="text-center">Simulador Credinómina Global BdV</h1>
		</div>

		<div class="container">
			<form method="post" action="/">
				<div class="form-group row">
					<label for="operacion" class="col-3 col-form-label">Seleccione tipo de operación</label>
					<div class="dropdown col-3">
						<button class="btn btn-secondary dropdown-toggle btn-outline-secondary" type="button" id="tipoOperacion" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							    Tipo de Operacion
						</button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<label class="dropdown-item"><input type="radio" name="operacion" href="#" id="credCliente" value="cliente" active>Credinómina Cliente</label>
							<!-- <label class="dropdown-item"><input type="radio" name="operacion" href="#" id="credEmpleado" value="empleado">Credinómina Empleado</label> -->
							<label class="dropdown-item"><input type="radio" name="operacion" href="#" id="credPersonal" value="personal">Credipersonal</label>
						</div>
					</div>
				</div>

				<div class="form-group row" id="ci-empleado">
					<label for="ci" class="col-3 col-form-label">Cédula de Identidad</label>
					<div class="input-group col-3">
						<div class="dropdown input-group-prepend">
							  <button class="btn btn-secondary dropdown-toggle btn-outline-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							    -
							  </button>
							  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
										<label class="dropdown-item"><input type="radio" name="nac" href="#" id="ve" value="V" active>V</label>
										<label class="dropdown-item"><input type="radio" name="nac" href="#" id="ex" value="E">E</label>
								</div>
						</div>
						<input class="form-control" type="text" name="ci" id="ci" placeholder="..." maxlength="8" autocomplete="off">
						<div class="input-group-append">
							<i class="fa fa-search input-group-text"></i>
						</div>
					</div>
				</div>
				<div class="form-group row">
					<label for="monto_solicitado" class="col-3">Monto Solicitado</label>
					<div class="input-group col-3">						
						<div class="input-group-prepend">
						  	<div class="input-group-text">Bs.</div>
						</div>
					    <input type="number" class="form-control" id="monto_solicitado" value="" autocomplete="off">
					</div>
				    
				    
				</div>
				<div class="form-group">
					<button class="btn btn-secondary" type="submit" id="consultar" value="send">Consultar</button>
				</div>
			</form>
		</div>

		<div class="container text-center">
			<a href="/"><button class="btn btn-primary mt-4"><i class="fa fa-home"></i> Página principal</button></a>
		</div>

		<script src="js/jquery.slim.min.js"></script>
    	<script src="js/popper.min.js"></script>
		<script src="js/bootstrap.min.js"></script>
    	<script type="text/javascript" src="js/script.js"></script>
	</body>
</html>
